{
  "name": "@esscrypt/plugin-polkadot",
  "version": "0.0.3",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/esscrypt/plugin-polkadot.git"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "@elizaos/source": "./src/index.ts",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@elizaos/core": "^1.0.10",
    "@polkadot/api": "16.2.1",
    "@polkadot/keyring": "13.5.1",
    "@polkadot/util-crypto": "13.5.1",
    "@polkadot/util": "13.5.1",
    "@substrate/asset-transfer-api": "0.7.2",
    "bignumber.js": "9.1.2",
    "zod": "^3.22.4",
    "node-cache": "5.1.2",
    "tsup": "8.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "vitest": "3.1.4",
    "typescript": "5.6.3"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "lint": "biome check src/",
    "lint:fix": "biome check --apply-unsafe src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/"
  },
  "peerDependencies": {
    "whatwg-url": "7.1.0"
  },
  "packageManager": "pnpm@9.15.0",
  "packageType": "plugin",
  "platform": "node",
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "COINMARKETCAP_API_KEY": {
        "type": "string",
        "description": "The API key for the CoinMarketCap API"
      },
      "POLKADOT_RPC_URL": {
        "type": "string",
        "description": "The URL of the Polkadot RPC endpoint"
      },
      "POLKADOT_PRIVATE_KEY": {
        "type": "string",
        "description": "The private key for the Polkadot wallet"
      }
    }
  },
  "npmPackage": "@esscrypt/plugin-polkadot",
  "publishConfig": {
    "access": "public"
  }
}
